{{#if cookie}}
  <form action="/adoption/post" id="adoption-form" method="post" enctype="multipart/form-data">

    {{#if error}}
      <div class="error">{{error}}</div>
    {{/if}}

    <input type="file" name="images" accept="image/*" required/>
    <input type="text" name="title" placeholder="Title" required />
    <input
      type="text"
      name="content"
      placeholder="What's on you mind, {{cookie.firstName}} ?"
      required
    />
    <input hidden name="userId" value="{{cookie._id}}" />
    <button type="submit">Post</button>

  </form>
{{else}}
  <p>You need to login to post content</p>
{{/if}}