<div id="adoption">
  <div>
    <button onclick="window.location.href = '/adoption/post'">New Post</button>
  </div>

  {{#if data}}

    {{#each data}}
      <div class="post-card">
        <div>
          <div class="text-part">
            <div class="main-text">
              <h1>{{{title}}}</h1>
              <p>{{{content}}}</p>
            </div>
          </div>
          {{#if image}}
            <div class="img-container">
              <img src={{{image}}}  alt={{{title}}} />
            </div>
          {{/if}}
        </div>

      </div>

    {{/each}}

    <div class="pagination">

      {{#if next}}
        <form action="/live" method="post">
          <input hidden value="{{{next}}}" name="queryDoc" />
          <button type="submit">Load More</button>
        </form>
      {{/if}}

      {{#if prev}}
        <form action="/live" method="post">
          <input hidden value="{{{prev}}}" name="queryDoc" />
          <button type="submit">Prev</button>
        </form>
      {{/if}}

      {{#if prev}}
        <form method="post">
          <input hidden value="0" name="queryDoc" />
          <button type="submit">Top</button>
        </form>

      {{/if}}

    </div>

  {{else}}
    <p>No data</p>
  {{/if}}

</div>