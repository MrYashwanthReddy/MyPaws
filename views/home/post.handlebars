{{#if cookie}}
  <h2>Create NEW POST</h2>
  <form
    id="post-form"
    action="/post"
    method="post"
    enctype="multipart/form-data"
  >

    <input type="file" name="images" accept="image/*" />
    <input type="text" name="title" placeholder="Title" required />
    <input
      type="text"
      name="content"
      placeholder="What's on you mind, {{cookie.firstName}} ?"
      required
    />
    <input hidden name="userId" value="{{cookie._id}}" />
    <button type="submit">Post</button>

  </form>
{{else}}
  <p>You need to login to post content</p>
{{/if}}