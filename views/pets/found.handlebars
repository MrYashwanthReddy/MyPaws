<h1>Found {{page.animal}} Form</h1>
<form
  id="foundpet-form"
  method="post"
  action="/pets/found/{{page.animal}}"
  enctype="multipart/form-data"
>
  {{#if error}}
    <div class="error">{{error}}</div>
  {{/if}}
  <label for="foundFirstName">Your First Name</label>
  <input
    type="text"
    placeholder="Enter your first name.."
    id="foundFirstName"
    pattern="[A-Za-z ]{1,}"
    title="Enter only Alphabets"
    required
    autofocus
    name="firstName"
  />

    <label for="foundLastName">Your Last Name</label>
  <input
    type="text"
    placeholder="Enter your last name.."
    id="foundLastName"
    pattern="[A-Za-z ]{1,}"
    title="Enter only Alphabets"
    required
    autofocus
    name="lastName"
  />
  <label for="foundEmail">Your Email</label>
  <input
    type="email"
    id="foundEmail"
    placeholder="Enter your email.. e.g. example@email.com"
    name="email"
    name="emailInput"
  />
  <input hidden value="{{page.animal}}" name="animalInput" />

  <label for="foundBreed">Breed</label>
  <input
    type="text"
    id="foundBreed"
    placeholder="Enter pet breed.."
    pattern="[A-Za-z ]{1,}"
    title="Enter only Alphabets"
    required
    name="breedInput"
  />
  <label for="foundColor">Color</label>
  <input
    type="text"
    id="foundColor"
    placeholder="Enter pet color.."
    pattern="[A-Za-z ]{1,}"
    title="Enter only Alphabets"
    required
    name="colorInput"
  />
  <div id="collarInput" class="wrapper">
    <p>Collar</p>
    <input
      required
      type="radio"
      id="collarInput1"
      name="collarInput"
      value="true"
    />
    <label for="collarInput1">Yes</label>
    <input
      required
      type="radio"
      id="collarInput2"
      name="collarInput"
      value="false"
      checked
    />
    <label for="collarInput2">No</label>
  </div>
  <label for="foundHeight">Height</label>
  <input
    type="number"
    id="foundHeight"
    placeholder="Enter pet height.. in CM"
    min="0"
    name="heightInput"
    required
  />
  <label for="foundGender">Gender</label>
  <select id="foundGender" name="genderInput">
    <option value="M">Male</option>
    <option value="F">Female</option>
  </select>

  {{#ifEquals page.animal "cat"}}
   {{> catTypes}}
  {{/ifEquals}}

  {{#ifEquals page.animal "dog"}}
  {{> dogTypes}}
  {{/ifEquals}}

  <label for="bodyTypeInput">Body Type</label>
  <select id="bodyTypeInput" name="bodyTypeInput">
    <option value="serverelyUnderWeight">Severely Under Weight</option>
    <option value="underWeight">Under Weight</option>
    <option value="idealWeight">Ideal Weight</option>
    <option value="overWeight">Over Weight</option>
  </select>

  <button type="submit">Submit</button>

</form>

<script src="/public/js/form.js">

</script>