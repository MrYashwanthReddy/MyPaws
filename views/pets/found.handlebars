<h1>Found Pet Form</h1>
<form
  id="foundpet-form"
  method="post"
  action="/pets/found"
  enctype="multipart/form-data"
>
  {{#if error}}
    <div class="error">{{error}}</div>
  {{/if}}
  <label for="foundName"> Your Name</label>
  <input id="foundName" type="text" id="lostName" name="nameInput" />
  <label for="foundEmail">Your Email</label>
  <input id="foundEmail" type="text" id="lostEmail" name="emailInput" />
  <label for="foundAnimal">Pet Found</label>
  <input id="foundAnimal" type="text" id="lostAnimal" name="animalInput" />
  <label for="foundImage">Upload Image</label>
  <input id="foundImage" type="file" name="imageInput" accept="image/*" />
  <label for="foundBreed">Breed</label>
  <input id="foundBreed" type="text" id="lostBreed" name="breedInput" />
  <label for="foundColor">Color</label>
  <input type="text" id="foundColor" name="colorInput" />
  <div id="colarInput" class="wrapper">
    <p>Colar</p>
    <input
      required
      type="radio"
      id="colarInput1"
      name="colarInput"
      value="true"
    />
    <label for="colarInput1">Yes</label>
    <input
      required
      type="radio"
      id="colarInput2"
      name="colarInput"
      value="false"
    />
    <label for="colarInput2">No</label>
  </div>
  <label for="foundHeight">Height</label>
  <input type="number" id="foundHeight" name="heightInput" />
  <label for="foundGender">Gender</label>
  <select id="foundGender" name="genderInput">
    <option value="M">Male</option>
    <option value="F">Female</option>
  </select>
  <label for="hairTypeInput">Hair Type</label>
  <input
    id="foundHairType"
    type="text"
    id="hairTypeInput"
    name="hairTypeInput"
  />
  <label for="foundEaType">Ear Type</label>
  <input id="foundEaType" type="text" id="earTypeInput" name="earTypeInput" />
  <label for="foundBodyType">Body Type</label>
  <input
    id="foundBodyType"
    type="text"
    id="bodyTypeInput"
    name="bodyTypeInput"
  />
  <label for="foundDistinguishingInput">Distinguishing information ("My cat has
    a brown nose with a white spot on it" )</label>
  <input type="text" id="foundDistinguishingInput" name="distinguishingInput" />

  <button type="submit">Submit</button>

</form>

<script src="/public/js/form.js">

</script>