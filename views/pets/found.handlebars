<h1>Found Pet Form</h1>
<form id="foundpet-form" method="post" action="/pets/found" enctype="multipart/form-data">
  {{#if error}}
  <div class="error">{{error}}</div>
  {{/if}}
  <label for="foundName">Your Name</label>
  <input type="text" placeholder="Enter your name.." id="foundName" pattern="[A-Za-z ]{1,}" title="Enter only Alphabets" required autofocus name="nameInput" />
  <label for="foundEmail">Your Email</label>
  <input type="email" id="foundEmail" placeholder="Enter your email.. e.g. example@email.com" name="email"
    name="emailInput" />
  <label for="foundAnimal">Pet Found</label>
  <input type="text" id="foundAnimal" placeholder="Enter pet type.. e.g. Dog" pattern="[A-Za-z ]{1,}" title="Enter only Alphabets" required name="animalInput" />
  <label for="foundImage">Upload Image</label>
  <input id="foundImage" type="file" name="imageInput" accept="image/*" required/>
  <label for="foundBreed">Breed</label>
  <input type="text" id="foundBreed" placeholder="Enter pet breed.." pattern="[A-Za-z ]{1,}" title="Enter only Alphabets" required name="breedInput" />
  <label for="foundColor">Color</label>
  <input type="text" id="foundColor" placeholder="Enter pet color.." pattern="[A-Za-z ]{1,}" title="Enter only Alphabets" required name="colorInput" />
  <div id="colarInput" class="wrapper">
    <p>Colar</p>
    <input required type="radio" id="colarInput1" name="colarInput" value="true" checked />
    <label for="colarInput1">Yes</label>
    <input required type="radio" id="colarInput2" name="colarInput" value="false" />
    <label for="colarInput2">No</label>
  </div>
  <label for="foundHeight">Height</label>
  <input type="number" id="foundHeight" placeholder="Enter pet height.. in ft" min="0" name="heightInput" readonly />
  <label for="foundGender">Gender</label>
  <select id="foundGender" name="genderInput">
    <option value="M">Male</option>
    <option value="F">Female</option>
  </select>
  <label for="foundHairType">Hair Type</label>
  <input type="text" id="foundHairType" placeholder="Enter pet hair type.." pattern="[A-Za-z ]{1,}" title="Enter only Alphabets" required name="hairTypeInput" />
  <label for="foundEaType">Ear Type</label>
  <input type="text" id="foundEaType" placeholder="Enter pet ear type.." pattern="[A-Za-z ]{1,}" title="Enter only Alphabets" required name="earTypeInput" />
  <label for="foundBodyType">Body Type</label>
  <input type="text" id="foundBodyType" placeholder="Enter pet body type.." pattern="[A-Za-z ]{1,}" title="Enter only Alphabets" required name="bodyTypeInput" />

  <button type="submit">Submit</button>

</form>

<script src="/public/js/form.js">

</script>