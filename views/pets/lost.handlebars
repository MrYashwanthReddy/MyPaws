<h1>Lost Pet Form</h1>
<form
  id="lostpet-form"
  method="post"
  action="/pets/lost"
  enctype="multipart/form-data"
>
  {{#if error}}
    <div class="error">{{error}}</div>
  {{/if}}

  <label for="lostAnimal">Animal</label>
  <input type="text" id="lostAnimal" name="animalInput" />
  <label for="imageInput">Upload Image</label>
  <input id="imageInput" type="file" name="imageInput" accept="image/*" />
  <label for="lostBreed">Breed</label>
  <input type="text" id="lostBreed" name="breedInput" />
  <label for="lostColor">Color</label>
  <input type="text" id="lostColor" name="colorInput" />
  <div id="colarInput" class="wrapper">
    <p>Colar</p>
    <input
      required
      type="radio"
      id="colarInput1"
      name="colarInput"
      value="true"
    />
    <label for="colarInput1">Yes</label>
    <input
      required
      type="radio"
      id="colarInput2"
      name="colarInput"
      value="false"
    />
    <label for="colarInput2">No</label>
  </div>
  <label for="lostHeight">Height</label>
  <input type="number" id="lostHeight" name="heightInput" />
  <label for="lostGender">Gender</label>
  <select id="lostGender" name="genderInput">
    <option value="M">Male</option>
    <option value="F">Female</option>
  </select>
  <label for="lostHairType">Hair Type</label>
  <input type="text" id="lostHairType" name="hairTypeInput" />
  <label for="lostEarType">Ear Type</label>
  <input type="text" id="lostEarType" name="earTypeInput" />
  <label for="lostBodyType">Body Type</label>
  <input type="text" id="lostBodyType" name="bodyTypeInput" />

  <button type="submit">Submit</button>

</form>