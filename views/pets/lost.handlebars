<h1>Lost {{page.animal}} Form</h1>
<form
  id="lostpet-form"
  method="post"
  action="/pets/lost"
  enctype="multipart/form-data"
>
  {{#if error}}
    <div class="error">{{error}}</div>
  {{/if}}



  <input hidden id="lostAnimal" value="{{page.animal}}" name="animalInput" />


  <label for="lostBreed">Breed</label>
  <input
    type="text"
    id="lostBreed"
    placeholder="Enter pet breed.."
    pattern="[A-Za-z ]{1,}"
    title="Enter only Alphabets"
    name="breedInput"
    required
  />
  <label for="lostColor">Color</label>
  <input
    type="text"
    id="lostColor"
    placeholder="Enter pet color.."
    pattern="[A-Za-z ]{1,}"
    title="Enter only Alphabets"
    name="colorInput"
    required
  />
  <div id="colarInput" class="wrapper">
    <p>Colar</p>
    <input
      required
      type="radio"
      id="colarInput1"
      name="colarInput"
      value="true"
    />
    <label for="colarInput1">Yes</label>
    <input
      required
      type="radio"
      id="colarInput2"
      name="colarInput"
      value="false"
      checked
    />
    <label for="colarInput2">No</label>
  </div>
  <label for="lostHeight">Height</label>
  <input
    type="number"
    id="lostHeight"
    placeholder="Enter pet height in ft.. e.g. 3.5"
    min="0"
    max="6"
    name="heightInput"
    required
  />
  <label for="lostGender">Gender</label>
  <select id="lostGender" name="genderInput">
    <option value="M">Male</option>
    <option value="F">Female</option>
  </select>

