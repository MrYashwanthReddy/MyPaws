<h1>Lost Pet Form</h1>
<form
  id="lostpet-form"
  method="post"
  action="/pets/lost"
  enctype="multipart/form-data"
>
  {{#if error}}
    <div class="error">{{error}}</div>
  {{/if}}

  <label for="petType">Pet Type</label>
  <select id="petType" name="petType">
    <option value="cat">Cat</option>
    <option value="dog">Dog</option>
  </select>
  <label for="imageInput">Upload Image</label>
  <input
    id="imageInput"
    type="file"
    name="imageInput"
    accept="image/*"
    required
  />
  <label for="lostBreed">Breed</label>
  <input
    type="text"
    id="lostBreed"
    placeholder="Enter pet breed.."
    pattern="[A-Za-z ]{1,}"
    title="Enter only Alphabets"
    name="breedInput"
    required
  />
  <label for="lostColor">Color</label>
  <input
    type="text"
    id="lostColor"
    placeholder="Enter pet color.."
    pattern="[A-Za-z ]{1,}"
    title="Enter only Alphabets"
    name="colorInput"
    required
  />
  <div id="colarInput" class="wrapper">
    <p>Colar</p>
    <input
      required
      type="radio"
      id="colarInput1"
      name="colarInput"
      value="true"
    />
    <label for="colarInput1">Yes</label>
    <input
      required
      type="radio"
      id="colarInput2"
      name="colarInput"
      value="false"
      checked
    />
    <label for="colarInput2">No</label>
  </div>
  <label for="lostHeight">Height</label>
  <input
    type="number"
    id="lostHeight"
    placeholder="Enter pet height in ft.."
    min="0"
    name="heightInput"
    required
  />
  <label for="lostGender">Gender</label>
  <select id="lostGender" name="genderInput">
    <option value="M">Male</option>
    <option value="F">Female</option>
  </select>
  <label>Hair Type</p>
  <div id="catHairType" class="type-wrapper">
    <div class="radio-group">
      <input
        required
        type="radio"
        id="hairless"
        name="catHairTypeInput"
        value="hairless"
      />
      <label for="hairless">
        <img class="hair-type-item" src="/public/img/Cat hairs/hairless.png" />
        Hairless
      </label>
    </div>
    <div class="radio-group">
      <input
        required
        type="radio"
        id="long"
        name="catHairTypeInput"
        value="long"
      />
      <label for="long">
        <img class="hair-type-item" src="/public/img/Cat hairs/long.png" />
        Long Hair
      </label>
    </div>
    <div class="radio-group">
      <input
        required
        type="radio"
        id="short"
        name="catHairTypeInput"
        value="short"
      />
      <label for="short">
        <img class="hair-type-item" src="/public/img/Cat hairs/short.png" />
        Short Hair
      </label>
    </div>
    <div class="radio-group">
      <input
        required
        type="radio"
        id="tabby"
        name="catHairTypeInput"
        value="tabby"
      />
      <label for="tabby">
        <img class="hair-type-item" src="/public/img/Cat hairs/tabby.png" />
        Tabby Hair
      </label>
    </div>
    <div class="radio-group">
      <input
        required
        type="radio"
        id="tortoiseshell"
        name="catHairTypeInput"
        value="tortoiseshell"
      />
      <label for="tortoiseshell">
        <img class="hair-type-item" src="/public/img/Cat hairs/tortoiseshell.png" />
        Tortoise Shell Hair
      </label>
    </div>
  </div>
  <div id="dogHairType" class="type-wrapper" style="display: none;">
    <div class="radio-group">
      <input
        required
